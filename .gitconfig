#	helper = osxkeychain
[diff]
	algorithm = patience
	compactionHeuristic = true
	renames = copy
[difftool]
	prompt = false
[fetch]
	prune = true
[merge]
	conflictstyle = diff3
	ff = false
	tool = emerge
[mergetool]
	keepBackup = false
	prompt = false
[pull]
	ff = only
	rebase = true
[push]
	default = current
[rerere]
	enabled = true
[remote]
	pushDefault = origin
[status]
	showUntrackedFiles = all
[url "ssh://git@heroku.com/"]
	insteadOf = https://git.heroku.com/
[user]
	name = Iain Beeston
	useConfigOnly = true
