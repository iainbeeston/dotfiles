[core]
	editor = emacs --no-window-system
[diff]
	algorithm = patience
	compactionHeuristic = true
	renames = copy
[difftool]
	prompt = false
[difftool "ediff"]
	cmd = emacs --no-window-system --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[fetch]
	prune = true
[merge]
	conflictstyle = diff3
	ff = false
	tool = emerge
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "ediff"]
        cmd = emacs --no-window-system --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"	
[pull]
	ff = only
	rebase = true
[push]
	default = current
[rebase]
	autosquash = true
[rerere]
	enabled = true
[remote]
	pushDefault = origin
[status]
	showUntrackedFiles = all
[url "ssh://git@heroku-bluespot/"]
	insteadOf = https://git.heroku-bluespot/
[url "ssh://git@heroku-personal/"]
	insteadOf = https://git.heroku-personal/
[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[user]
	name = Iain Beeston
	email = iainbeeston@users.noreply.github.com
	useConfigOnly = true
